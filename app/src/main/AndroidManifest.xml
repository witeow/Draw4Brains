<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.draw4brains">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Draw4Brains">

        <activity
            android:name=".view.LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.StatisticsPageActivity"
            android:label="Statistics"
            android:exported="true"/>
        <activity android:name=".view.UserHomeActivity" android:exported="true" />
        <activity android:name=".view.AdminHomeActivity" android:exported="true" />
        <activity android:name=".view.ForgetPasswordActivity" android:exported="true"/>
        <activity android:name=".view.SelectGameActivity" android:exported="true"/>
        <activity android:name=".view.RegisterActivity" android:exported="true"/>
        <activity android:name=".view.AccountActivity" android:exported="true"/>
        <activity android:name=".view.GameLevelActivity" android:exported="true"/>
        <activity android:name=".view.EndGameActivity" android:exported="true"/>
        <activity android:name=".view.ConnectDotsActivity" android:exported="true"/>
        <activity
            android:name=".view.UsersListActivity"
            android:parentActivityName=".view.AdminHomeActivity"
            android:exported="true"/>
    </application>

</manifest>