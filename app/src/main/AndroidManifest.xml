<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.draw4brains">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Draw4Brains">

        <activity
            android:name=".view.UserLoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.RegisterActivity"
            android:label="Registering New Account"
            android:parentActivityName=".view.UserLoginActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".view.HomeActivity"
            android:label="User Home"
            android:parentActivityName=".view.UserLoginActivity"
            android:windowSoftInputMode="adjustPan"/>


    </application>

</manifest>