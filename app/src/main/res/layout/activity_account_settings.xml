<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Draw4Brain_MainBG">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/back_arrow"/>


    <TextView
        android:id="@+id/tv_acc_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="72dp"
        android:text="Account Details"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_logout"
        app:layout_constraintTop_toBottomOf="@id/tv_acc_details">

        <LinearLayout
            android:id="@+id/linear_layout_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:weightSum="4">

            <TextView
                android:id="@+id/tv_name_title"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/sky_blue"
                android:text="Name"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:text="Name"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/tv_gender_title"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/sky_blue"
                android:text="Gender"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/tv_gender"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:text="Gender"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/tv_birthday_title"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/sky_blue"
                android:text="Birthday"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/tv_birthday"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:text="Birthday"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/tv_phone_title"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/sky_blue"
                android:text="Phone Number"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/tv_phone"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:text="Phone Number"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/tv_house_num_title"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/sky_blue"
                android:text="House Number"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/tv_house_num"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:text="House Number"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/tv_address_title"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/sky_blue"
                android:text="Address"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:text="Address"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/tv_email_title"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/sky_blue"
                android:text="Email"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/tv_email"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:text="Email"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />
            <TextView
                android:id="@+id/tv_caretaker_email_title"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/sky_blue"
                android:text="Caretaker's Email"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/tv_caretaker_email"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:text="Caretaker's Email"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/tv_nok_name_title"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/sky_blue"
                android:text="NOK Name"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/tv_nok_name"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:text="NOK Name"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/tv_nok_num_title"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/sky_blue"
                android:text="NOK Number"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/tv_nok_num"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:text="NOK Number"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="61dp" />




        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/btn_logout"
        android:layout_width="312dp"
        android:layout_height="56dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_logout"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>